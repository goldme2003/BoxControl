<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nari.boxcontrol.Activity.LoginActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_login_user"
        android:id="@+id/tv_login_user"
        android:layout_marginLeft="47dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_login_key"
        android:id="@+id/tv_login_key"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/tv_login_user"
        android:layout_alignLeft="@+id/tv_login_user"
        android:layout_alignStart="@+id/tv_login_user" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/et_login_key"
        android:layout_alignBaseline="@+id/tv_login_key"
        android:layout_alignBottom="@+id/tv_login_key"
        android:layout_toRightOf="@+id/tv_login_key"
        android:layout_toEndOf="@+id/tv_login_key"
        android:text="123" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/et_login_id"
        android:text="test_user"
        android:layout_above="@+id/et_login_key"
        android:layout_toRightOf="@+id/tv_login_user"
        android:layout_toEndOf="@+id/tv_login_user" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_login_login"
        android:id="@+id/btn_login_login"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/et_login_key"
        android:layout_alignStart="@+id/et_login_key" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_login_clear"
        android:id="@+id/btn_login_cancel"
        android:layout_alignBottom="@+id/btn_login_login"
        android:layout_alignRight="@+id/et_login_key"
        android:layout_alignEnd="@+id/et_login_key"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tv_login_status"
        android:id="@+id/tv_login_status"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
